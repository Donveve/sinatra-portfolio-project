<% if Helpers.is_logged_in?(session) %>
  <H1>Hello <%=@student.name %></H1>
  <h6>  (if not <%=@student.name %> <a href="students/refresh" > click here.)</a> </h6>
  <br />
  <p>
    <%t=Time.now %>
    Today is <%=t.strftime("%A") %>, <%= t.strftime("%B") %> <%= t.strftime("%w") %>, <%= t.strftime("%Y") %> <br />
  </p>

  <%if !@student.subjects.empty? %>
    <h3>You have completed:</h3><br />
    <%@student.subjects.each do |s| %>
      <%= s.name %>
      <br />
    <%end %>
  <%else %>
    <p>You haven't finished any subjects today.</p>
  <%end %>

  <%if !@student.instruments.empty? %>
    <h3>Today you practiced:</h3><br />
    <%@student.instruments.each do |s| %>
      <%= s.name %>
      <br />
    <%end %>
  <%else %>
      <p>You haven't practiced any instruments today</p>
  <%end %>
<br /><br />
  <a href="/students/<%=@student.id%>/edit">Need to make corrections or additions?</a>
  <br /><br />
  <form method="get" action='/students/logout'>
    <input type='submit' id='signout' value='Sign Out' name='signout' />
  </form>
  <br />
  <form method="get" action="/students/<%=@student.id%>/delete">
    <input id="delete" type="submit" name="delete" value="Want to delete your account?">
  </form>
<%end %>
