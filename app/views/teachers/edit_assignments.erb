<form method="post" action="/teachers/edit_assignments">
  <input id="hidden" type="hidden" name="_method" value="patch">

<h2>Current subjects</h2>
<%Subject.all.each do |subject| %>
  <ul>
    <li><%=subject.name %></li>
  </ul>
<%end %>
        <br />
<label>Add new subjects here:</label>
<input id="new_subject" type="text" name="new_subject[]" >
<input id="new_subject" type="text" name="new_subject[]" >
<input id="new_subject" type="text" name="new_subject[]" >


    <br />

<h2>Current Instruments:</h2>
<%Instrument.all.each do |instrument| %>
  <ul>
    <li><%=instrument.name %></li>
  </ul>
<%end %>
<br />
<label>Add new instruments here:</label>
<input id="new_instrument" type="text" name="new_instrument[]" >
<input id="new_instrument" type="text" name="new_instrument[]" >

